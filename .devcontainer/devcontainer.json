{
  "name": "eic-opticks",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
    "target": "devenv",
    "args": {
      "USERNAME": "${localEnv:USER}",
      "USER_UID": "${localEnv:UID}",
      "USER_GID": "${localEnv:GID}"
    },
    "cacheFrom": [
      "ghcr.io/bnlnpps/eic-opticks:base"
    ]
  },
  "remoteUser": "${localEnv:USER}",
  "updateRemoteUserUID": true,
  "workspaceFolder": "/src/eic-opticks",
  // Mount the project into the container
  "mounts": [
    "source=${localWorkspaceFolder},target=/src/eic-opticks,type=bind"
  ]
}
